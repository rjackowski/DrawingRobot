<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.robert.drawingrobot.BluetoothConfiguration">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aktywacja Bluetooth"
        android:id="@+id/btnBluetoothInit"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dezaktywacja Bluetooth"
        android:id="@+id/btnBluetoothTurnOff"
        android:layout_gravity="center"
        android:layout_alignTop="@+id/btnBluetoothInit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="120dp"
        android:id="@+id/listPairedDevices"
        android:layout_below="@+id/btnDiscoverDevices"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Szukaj urządzeń"
        android:id="@+id/btnDiscoverDevices"
        android:layout_gravity="center"
        android:layout_below="@+id/btnBluetoothInit"
        android:layout_centerHorizontal="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listDiscoveredDevices"
        android:layout_below="@+id/listPairedDevices"
        android:layout_marginTop="87dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wyślij Dane"
        android:id="@+id/btnSend"
        android:layout_below="@+id/btnBluetoothTurnOff"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>